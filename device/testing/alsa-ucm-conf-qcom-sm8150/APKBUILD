pkgname=alsa-ucm-conf-qcom-sm8150
pkgver=1
pkgrel=0
pkgdesc="ALSA UCM configuration for SM7150 devices"
url="https://github.com/Aospa-raphael-unofficial/alsa-ucm-conf"
arch="aarch64"
license="BSD-3-Clause"
provides="alsa-ucm-conf"
provider_priority=1
_commit="86fcac2f017b7fc51dd4a100f9e5dd3d66bf171a"
source="$pkgname-$_commit.tar.gz::https://github.com/Aospa-raphael-unofficial/alsa-ucm-conf/archive/$_commit.tar.gz"
options="!check"
builddir="$srcdir/alsa-ucm-conf-$_commit"

package() {
	# install audio config files
	mkdir -p "$pkgdir"/usr/share/alsa
	cp -r ucm2 "$pkgdir"/usr/share/alsa/
}

